#!/bin/bash
# This script downloads covid data and displays it

DATA=$(curl https://api.covidtracking.com/v1/us/current.json)
POSITIVE=$(echo $DATA | jq '.[0].positive')
NEGATIVE=$(echo $DATA | jq '.[0].negative')
HOSPITAL=$(echo $DATA | jq '.[0].hospitalizedCurrently')
TODAY=$(date)

echo "On $TODAY, there were $POSITIVE positive COVID cases"
echo "$POSITIVE positive COVID Cases"
echo "$NEGATIVE negative COVID cases"
echo "$HOSPITAL people in hospital with covid"
